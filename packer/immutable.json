{
    "builders": [
        {
            "type": "yandex",
            "service_account_key_file": "{{ user `key`}}",
            "folder_id": "{{ user `folder_id`}}",
            "source_image_family": "{{ user `src_image` }}",
            "image_name": "reddit-full-{{timestamp}}",
            "image_family": "reddit-full",
            "ssh_username": "ubuntu",
            "platform_id": "standard-v1",
            "use_ipv4_nat": "True",
            "subnet_id": "{{ user `subnet_id`}}",
            "zone": "{{ user `zone`}}"
        }
    ],
    "provisioners": [
        {
            "type":"shell",
            "inline":[
                       "sudo apt-get update",
                       "sleep 50",
                       "sudo apt-get install dialog apt-utils -y"

            ]
        },
        {
            "pause_before": "60s",
            "type": "shell",
            "script": "/home/lenar/otus_learn/RossarioAgro_infra/packer/scripts/install_ruby.sh",
            "execute_command": "sudo {{.Path}}"
        },
        {
            "type": "shell",
            "script": "/home/lenar/otus_learn/RossarioAgro_infra/packer/scripts/install_mongodb.sh",
            "execute_command": "sudo {{.Path}}"
        },
        {
            "type": "shell",
            "script": "/home/lenar/otus_learn/RossarioAgro_infra/packer/scripts/deploy.sh",
            "execute_command": "sudo {{.Path}}"
        }
    ]
}
